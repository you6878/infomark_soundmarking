<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">


        <ImageView
            android:src="@drawable/ico_music_image"
            android:layout_alignParentLeft="true"
            android:id="@+id/iocn_imageview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="현재상태"
            android:textColor="#b8000000"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/content_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow_icon"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iocn_imageview"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="소나기내리는 숲의 소리"
            android:textColor="#b8000000"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/timeline_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_textview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iocn_imageview"
            android:layout_weight="1"
            android:gravity="center"
            android:text="05:12"
            android:textColor="#88888e"
            android:textSize="14dp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:src="@drawable/icon_playlist_play" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black" />
    </RelativeLayout>
</layout>